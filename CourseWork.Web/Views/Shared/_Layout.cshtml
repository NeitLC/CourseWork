<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Collections</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="icon" href="~/img/icon.svg" />
    <link id="dark-theme-style" rel="stylesheet" />
    <script src="~/lib/js-cookie/js.cookie.min.js"></script>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <img src="~/img/icon.svg" width="30" height="30" alt="">
            Collections
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarToggler">
            <form class="d-flex mx-auto needs-validation"
                  method="get"
                  style="width: 40%;"
                  novalidate>
                <input class="form-control me-2"
                       type="search"
                       placeholder="Type"
                       name="query"
                       required>
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link"
                       asp-controller="Home">
                        Collections
                    </a>
                </li>
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <div class="text-center">
                            <a href="" class="nav-link" data-toggle="modal" data-target="#modalLoginForm">
                                Signin
                            </a>
                        </div>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="Account"
                           asp-action="Logout">
                            Logout
                        </a>
                    </li>
                }
                <li class="nav-item">
                    <a href="#"
                       class="btn btn-outline-info ml-auto font-weight-bold"
                       id="theme-toggler">
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Signin</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body mx-2">
                <a class="btn btn-primary w-100 mt-1 mx-auto oauth-btn"
                   asp-controller="Account"
                   asp-action="SetLogin"
                   asp-route-provider="Facebook">
                    <i class="bi bi-facebook"></i>
                    Facebook
                </a>
                <a class="btn btn-danger w-100 my-1 mx-auto oauth-btn"
                   asp-controller="Account"
                   asp-action="SetLogin"
                   asp-route-provider="Reddit">
                    <i class="bi bi-reddit"></i>
                    Reddit
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container body-content">
    @RenderBody()
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/index.js"></script>
</body>
</html>
